<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/user_setting_jiange_small"
    android:layout_marginTop="@dimen/user_setting_jiange_small">
    <!--app:cardCornerRadius="5dp"
    app:elevation="1dp">-->

    <RelativeLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/left"
            android:layout_width="130dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/c002"/>
            <RelativeLayout
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image">
                <ImageView
                    android:id="@+id/locationimg"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:background="@drawable/location"/>
                <TextView
                    android:id="@+id/locationword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="北京市西城区"
                    android:layout_toRightOf="@+id/locationimg"/>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地块001"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <!--面积-->
            <TextView
                android:id="@+id/mianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="面积："
                android:layout_below="@+id/title"/>
            <TextView
                android:id="@+id/mianjivalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HelloWorld"
                android:overScrollMode="always"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/mianji"
                android:layout_toRightOf="@+id/mianji"/>

            <!--作物-->
            <TextView
                android:id="@+id/zuowu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="作物："
                android:layout_below="@+id/mianji"/>
            <TextView
                android:id="@+id/cropkinds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HelloWorld"
                android:overScrollMode="always"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/zuowu"
                android:layout_toRightOf="@+id/zuowu"/>

            <!--预计产值-->
            <TextView
                android:id="@+id/yujichanzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="预计产值："
                android:layout_below="@+id/zuowu"/>
            <TextView
                android:id="@+id/yujichanzhivalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HelloWorld"
                android:overScrollMode="always"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/yujichanzhi"
                android:layout_toRightOf="@+id/yujichanzhi"/>

            <TextView
                android:id="@+id/addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-5-30"
                android:layout_alignParentBottom = "true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>
