<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.esri.android.map.MapView
        android:id="@+id/mapofAreaItemInfo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        mapoptions.MapType="SATELLITE"
        mapoptions.ZoomLevel="6"
        mapoptions.center="39.9, 116.3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_centerHorizontal="true"
        android:background="#50000000"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="vertical"

            android:gravity="center"

            >
            <ImageView
                    android:id="@+id/legendPic"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="vertical"

            android:gravity="center"
            android:id="@+id/legendInfo"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <TextView
                        android:text="low"
                        android:id="@+id/legendInfo_low"
                        android:textSize="10dip"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="3.0dip"
                       />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <TextView
                        android:text="high"
                        android:id="@+id/legendInfo_high"
                        android:textSize="10dip"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="3.0dip"
                         />
                </LinearLayout>
                <!--TextView
                    android:text="low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/legendInfo_low"
                    android:textSize="5dip"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="3.0dip"/-->



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_recyclerview_horizontal"
            android:layout_centerVertical="true"
            android:background="#FF0000"
            android:scrollbars="none"
            ></android.support.v7.widget.RecyclerView>


    </LinearLayout>


    <!--Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp"  /-->
</RelativeLayout>