<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbarlayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/top_bar">
        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="18dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bt_back"/>
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textSize="23sp"
            android:textColor="#ffffff"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/servicesetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/toolbarlayout"
        android:layout_marginTop="@dimen/user_setting_jiange_large">
        <EditText
            android:id="@+id/usernameEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="@dimen/user_setting_jiange_large"
            android:text="请输入用户名"
            android:textColor="@color/grayword1"
            android:background="@drawable/input"/>
        <EditText
            android:id="@+id/oldpsdEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="@dimen/user_setting_jiange_large"
            android:text="请输入原密码"
            android:textColor="@color/grayword1"
            android:background="@drawable/input"
            android:layout_below="@+id/usernameEt"/>
        <EditText
            android:id="@+id/newpsdEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="@dimen/user_setting_jiange_large"
            android:layout_marginBottom="@dimen/user_setting_jiange_large"
            android:text="请输新密码"
            android:textColor="@color/grayword1"
            android:background="@drawable/input"
            android:layout_below="@+id/oldpsdEt"/>
        <EditText
            android:id="@+id/renewpsdEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="@dimen/user_setting_jiange_large"
            android:layout_marginBottom="@dimen/user_setting_jiange_large"
            android:text="请再次输新密码"
            android:textColor="@color/grayword1"
            android:background="@drawable/input"
            android:layout_below="@+id/newpsdEt"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logdelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_setting_jiange_large"
        android:layout_below="@+id/servicesetting">
        <Button
            android:id="@+id/bt_changesucceed"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bt_changesucceed"/>
    </RelativeLayout>

</RelativeLayout>