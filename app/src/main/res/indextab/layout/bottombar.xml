        android:layout_weight="1">
        <TextView
            android:text="设置"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab02"
        android:layout_height="80dp"
        android:layout_width="wrap_content"
        android:layout_weight="1">
        <TextView
            android:text="地图"
