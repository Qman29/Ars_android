<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/usersettingbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/usersettingbg"/>
        <ImageView
            android:id="@+id/pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pic"/>
        <TextView
            android:id="@+id/usernameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
           android:layout_below="@+id/pic"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/servicesetting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_setting_aBar"
        android:background="@color/white"
        android:layout_marginTop="@dimen/user_setting_jiange_large"
        android:layout_below="@+id/title_bg">
        <ImageView
            android:id="@+id/servicesettingpic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/servicesetting"/>
        <TextView
            android:id="@+id/servicesettingtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayword"
            android:textSize="@dimen/user_setting_word"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/servicesettingpic"
            android:layout_marginLeft="@dimen/user_setting_word"
            android:text="修改服务"/>
        <ImageView
            android:id="@+id/servicesettingselected"
            android:layout_width="20dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selected"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logdelete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_setting_aBar"
        android:background="@color/white"
        android:layout_marginTop="@dimen/user_setting_jiange_large"
        android:layout_below="@+id/servicesetting">
        <ImageView
            android:id="@+id/logdeletepic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/logdelete"/>
        <TextView
            android:id="@+id/logdeletetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayword"
            android:textSize="@dimen/user_setting_word"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/logdeletepic"
            android:layout_marginLeft="20dp"
            android:text="注销登陆"/>
        <ImageView
            android:id="@+id/logdeleteselected"
            android:layout_width="20dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selected"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/psdsetting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_setting_aBar"
        android:background="@color/white"
        android:layout_marginTop="@dimen/user_setting_jiange_small"
        android:layout_below="@+id/logdelete">
        <ImageView
            android:id="@+id/psdsettingpic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/psdsetting"/>
        <TextView
            android:id="@+id/psdsettingtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayword"
            android:textSize="@dimen/user_setting_word"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/psdsettingpic"
            android:layout_marginLeft="20dp"
            android:text="修改密码"/>
        <ImageView
            android:id="@+id/psdsettingselected"
            android:layout_width="20dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selected"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_setting_aBar"
        android:background="@color/white"
        android:layout_marginTop="@dimen/user_setting_jiange_small"
        android:layout_below="@+id/psdsetting">
        <ImageView
            android:id="@+id/aboutpic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/about"/>
        <TextView
            android:id="@+id/abouttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayword"
            android:textSize="@dimen/user_setting_word"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/aboutpic"
            android:layout_marginLeft="20dp"
            android:text="关于我们"/>
        <ImageView
            android:id="@+id/aboutselected"
            android:layout_width="20dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selected"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_setting_aBar"
        android:background="@color/white"
        android:layout_marginTop="@dimen/user_setting_jiange_large"
        android:layout_below="@+id/about">
        <ImageView
            android:id="@+id/logoutpic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/logout"/>
        <TextView
            android:id="@+id/logouttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayword"
            android:textSize="@dimen/user_setting_word"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/logoutpic"
            android:layout_marginLeft="20dp"
            android:text="退出登陆"/>
        <ImageView
            android:id="@+id/logoutselected"
            android:layout_width="20dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selected"/>
    </RelativeLayout>
</RelativeLayout>