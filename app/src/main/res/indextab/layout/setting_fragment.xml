<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/toolbarlayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/top_bar">
        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="18dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bt_back"/>
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改服务"
            android:textSize="23sp"
            android:textColor="#ffffff"
            />
    </RelativeLayout>
    <!--checkBox区域-->
    <RelativeLayout
        android:id="@+id/checkboxsarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffd"
        android:layout_below="@+id/toolbarlayout">

        <RelativeLayout
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/user_setting_jiange_large">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="农业遥感应用"
                android:textSize="@dimen/word_number"
                android:textColor="#04bfec"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/checkboxs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fffffd"
            android:layout_below="@+id/title1">
            <!--第一行chackBox-->
            <RelativeLayout
                android:id="@+id/firstline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/user_setting_jiange_large"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/NZWJXFL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:text="农作物精细分类"
                    android:textSize="@dimen/word_number"
                    android:textColor="@color/grayword"
                    style="@style/MyCheckBox"
                    android:clickable="true"/>
                <CheckBox
                    android:id="@+id/TRSQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_left_right"
                    android:layout_alignParentRight="true"
                    android:text="土壤墒情监测"
                    android:textSize="@dimen/word_number"
                    android:textColor="@color/grayword"
                    style="@style/MyCheckBox"
                    android:clickable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/secondline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstline"
                android:layout_marginTop="@dimen/user_setting_jiange_large">
                <CheckBox
                    android:id="@+id/NYBCHJC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:text="农业病虫害监测"
                    android:textSize="@dimen/word_number"
                    android:textColor="@color/grayword"
                    style="@style/MyCheckBox"
                    android:clickable="true"/>
                <CheckBox
                    android:id="@+id/TRFL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight ="@dimen/margin_left_right"
                    android:text="土壤肥力监测"
                    android:textSize="@dimen/word_number"
                    android:textColor="@color/grayword"
                    style="@style/MyCheckBox"
                    android:clickable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/thirdline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondline"
                android:layout_marginTop="@dimen/user_setting_jiange_large">
                <CheckBox
                    android:id="@+id/NZWZSJC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:layout_alignParentLeft="true"
                    android:text="农作物长势监测"
                    android:textSize="@dimen/word_number"
                    android:textColor="@color/grayword"
                    style="@style/MyCheckBox"
                    android:clickable="true"/>
                <CheckBox
                    android:id="@+id/NZWGC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_left_right"
                    android:text="农作物估产  "
                    android:textSize="@dimen/word_number"
                    android:textColor="@color/grayword"
                    style="@style/MyCheckBox"
                    android:clickable="true"/>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/user_setting_jiange_large"
            android:layout_below="@+id/checkboxs">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="其他应用"
                android:textSize="@dimen/word_number"
                android:textColor="#04bfec"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/others"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title2"
            android:layout_marginTop="@dimen/user_setting_jiange_large"
            android:layout_marginBottom="@dimen/user_setting_jiange_large">
            <CheckBox
                android:id="@+id/other1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:layout_alignParentLeft="true"
                android:text="服务A"
                android:textSize="@dimen/word_number"
                android:textColor="@color/grayword"
                style="@style/MyCheckBox"
                android:clickable="true"/>
            <CheckBox
                android:id="@+id/other2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_left_right"
                android:text="服务B"
                android:textSize="@dimen/word_number"
                android:textColor="@color/grayword"
                style="@style/MyCheckBox"
                android:clickable="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/service"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/checkboxsarea"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/user_setting_jiange_large"
        android:padding="@dimen/user_setting_jiange_small">

        <TextView
            android:id="@+id/beginDate"
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="起始时间"
            android:textAlignment="center"
            android:textColor="#04bfec"
            android:background="@drawable/bt_select_time"/>

        <TextView
            android:id="@+id/endDate"
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="结束时间"
            android:textAlignment="center"
            android:textColor="#04bfec"
            android:background="@drawable/bt_select_time"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/saveBtnArea"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/service"
        android:layout_marginTop="@dimen/user_setting_jiange_large">
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/submit" />
        </RelativeLayout>
</RelativeLayout>