<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LinearLayout1ofsavedrawarea"
        android:orientation="horizontal"
        android:background="@color/gray">
        <com.esri.android.map.MapView
            android:id="@+id/mapofselectordraw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            mapoptions.MapType="SATELLITE"
            mapoptions.ZoomLevel="6"
            mapoptions.center="39.9, 116.3" />
    </LinearLayout>



    <Button
        android:text="Exit"
        android:textAllCaps="false"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:id="@+id/exitofareaSelectorDraw" />

    <Button
        android:text="Undo"
        android:textAllCaps="false"
        android:visibility="gone"
        android:id="@+id/undoofareaSelectorDraw"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:backgroundTint="#d3dfe7"
        android:background="#d3dfe7"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"/>

    <SearchView
        android:id="@+id/searchofareaSelectorDraw"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:backgroundTint="#d3dfe7"
        android:background="#d3dfe7"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/positionofareaSelectorDraw"
        android:backgroundTint="@color/blue"
        android:background="@drawable/position"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="55dp"
        />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/savabarofareaSelectorDraw"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        >

        <TextView
            android:text="请点击保存按钮保存区域"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:id="@+id/textViewofSelectorDraw"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="0.7"/>

        <Button
            android:id="@+id/saveofareaSelectorDraw"
            android:backgroundTint="@color/blue"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Save"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"

            />

    </LinearLayout>


</RelativeLayout>